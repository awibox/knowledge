[user]
    name = "Andrei Arkhipov"
    email = "andrei@awb.pw"

[github]
    user = awibox

[push]
    default = tracking

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /Users/awibox/.gitignore_global

[alias]
    co = checkout
    st = status
    di = diff
    ci = commit
    hr = reset --hard
    up = remote update
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
